{
  "name": "@uraniadev/emailer",
  "author": "uraniadev <m.isaia@urania.dev> (https://github.com/urania-dev)",
  "description": "An email boilerplate in Svelte5 Tailwindcss and Tw-to-CSS, inspired by @react/email",
  "version": "0.0.1",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urania-dev/emailer.git"
  },
  "keywords": [
    "emailer",
    "typescript",
    "svelte",
    "svelte5",
    "email",
    "ssr",
    "sveltekit"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/urania-dev/emailer/issues"
  },
  "homepage": "https://github.com/urania-dev/emailer#readme",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check ."
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.4",
    "tw-to-css": "0.0.12"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "autoprefixer": "^10.4.20",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "publint": "^0.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.11"
  }
}